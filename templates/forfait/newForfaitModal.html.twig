<div class="modal fade" id="newForfaitModal" tabindex="-1" aria-labelledby="newForfaitModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <strong id="modalTitle" class="modal-title" id="ConfigModalLabel"><p class="p-3 mb-2 w-100 bg-primary text-white" id="titleContent">Ajout d'un forfait!</p></strong>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="newForfaitModalBody">

            </div>
            <div class="modal-footer" id="">
                <button type="button" class="btn btn-secondary" id="btn-close-modal" data-dismiss="modal">Annuler</button>
                <button class="btn btn-primary" id="btn-valider-forfait">{{ button_label|default('valider') }}</button>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).on('click', '#btn-valider-forfait', function (){
        typeForfaitId = $('#forfait_type_forfait').val()
        titre = $('#forfait_forfait_titre').val()
        companyId = $('#forfait_companyId').val()
        isActif = $('#forfait_actif').val()
        forfaitData = {
            'typeForfaitId' : typeForfaitId,
            'titre' : titre,
            'companyId' : companyId,
            'isActif' : isActif,
        }
        // With Ajax we send request to add new Prix forfait config
        $.ajax({
            data:
                {
                    data : forfaitData
                },
            url: '{{ path('app_service_form_addNewForfait') }}',
            async: true,
            type: 'GET',
            success: function (result) {
                    location.reload()
            },
        });
    })

    $('#newForfaitModal').on('hidden.bs.modal', function () {
        location.reload()
    })
</script>