<form method="post" action="{{ path('app_forfait_delete', {'id': forfait.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ forfait.id) }}">
    <button class="btn btn-danger btn-sm btnDelete" aria-label="Left Align" data-toggle="tooltip" data-placement="right" title="Supprimer Le Forfait">
        <i class="bi bi-trash"></i>
    </button>
</form>
