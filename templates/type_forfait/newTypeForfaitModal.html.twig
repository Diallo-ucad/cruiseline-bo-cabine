<div class="modal fade" id="newTypeForfaitModal" tabindex="-1" aria-labelledby="newTypeForfaitModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <strong id="modalTitle" class="modal-title" id="ConfigModalLabel"><p class="p-3 mb-2 w-100 bg-primary text-white" id="titleContent">Ajout d'un type forfait!</p></strong>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="newTypeForfaitModalBody">

            </div>
            <div class="modal-footer" id="">
                <button type="button" class="btn btn-secondary" id="btn-close-modal" data-dismiss="modal">Annuler</button>
                <button class="btn btn-primary" id="btn-valider-type-forfait">{{ button_label|default('valider') }}</button>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).on('click', '#btn-valider-type-forfait', function (){
        titre = $('#type_forfait_titre').val()
        isActif = $('#type_forfait_actif').val()
        forfaitTypeData = {
            'titre' : titre,
            'isActif' : isActif,
        }
        // With Ajax we send request to add new Prix forfait config
        $.ajax({
            url:  '{{ path('app_service_form_addNewTypeForfait') }}',
            data:
                {
                    data : forfaitTypeData
                },
            async: true,
            type: 'GET',
            success: function (result) {
                location.reload()
            },
        });
    })

    $('#newTypeForfaitModal').on('hidden.bs.modal', function () {
        location.reload()
    })
</script>