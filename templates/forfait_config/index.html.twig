{% extends 'base.html.twig' %}

{% block title %}ForfaitConfig index{% endblock %}

{% block body %}
    <h1>ForfaitConfig index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Bateau</th>
                <th>Cabin category</th>
                <th>Cabin type</th>
                <th>Port</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for forfait_config in forfait_configs %}
            <tr>
                <td>{{ forfait_config.id }}</td>
                <td>{{ forfait_config.bateauId }}</td>
                <td>{{ forfait_config.cabinCategory }}</td>
                <td>{{ forfait_config.cabinType }}</td>
                <td>{{ forfait_config.portId }}</td>
                <td>
                    <a href="{{ path('app_forfait_config_show', {'id': forfait_config.id}) }}">show</a>
                    <a href="{{ path('app_forfait_config_edit', {'id': forfait_config.id}) }}">edit</a>
                    {{ include('forfait_config/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
